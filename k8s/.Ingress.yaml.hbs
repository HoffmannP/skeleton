apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{dashCase name}}
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: "0"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "600"
spec:
  ingressClassName: nginx
  rules:
    - host: %URI%
      http:
        paths:
          - backend:
              service:
                name: {{dashCase name}}
                port:
                  number: 80
            path: /
            pathType: Prefix
