---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{dashCase name}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{dashCase name}}
  template:
    metadata:
      labels:
        app: {{dashCase name}}
    spec:
      restartPolicy: Always
      containers:
        - image: %GITURI%
          imagePullPolicy: Always
          name: {{dashCase name}}
          ports:
            - containerPort: 80
      imagePullSecrets:
        - name: gitlab
